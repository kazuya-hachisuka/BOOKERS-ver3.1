<h2>New book</h2>
<% if @book.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
        <% end %>
	<%= form_for(book) do |f| %>
	<b class="input-xlarge">Title<br><%= f.text_field :title, class: 'form-control' %></br></b>
	<b class="opinion">Opinion<br><%= f.text_area :body,class: 'form-control test_class'%><div class="count">残文字数:<span id="char_num">0</span></div></br>
<%= f.submit 'Create Book', class: 'col-md-12 btn btn-primary' %>
<% end %>
<script>
  $(function(){
  $('#char_num').html(200-$('.test_class').val().length);
  $('.test_class').bind('keydown keyup keypress change',function(){
    $('#char_num').html(200-$('.test_class').val().length);
    });
  });
</script>
