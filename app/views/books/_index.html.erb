<table class="table table-hover table-inverse">
<thead>
	<tr>
		<th class="col-md-offset-1"></th>
		<th>Title</th>
		<th>Opinion</th>
	</tr>
</thead>
<tbody>
	<% books.each do |book|%>
	<tr>
		<td><%= attachment_image_tag book.user, :image, :fill, 60, 60, class: " profile-thumb", fallback: "no_image.jpg",:size => "60x60" %></td>
		<td><%= link_to  book.title, book_path(book.id) %></td>
		<td><%= book.body %></td>
	</tr>
	<% end %>
</tbody>
</table>