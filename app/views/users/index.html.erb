<div class="page-header"></div>
<body>
	<div class="container">
		<div class="row">
			<div class="col-sm-3">
			<%= render 'users/userinfo', user:current_user %>
			<%= render 'books/newbook', book:@book %>
			</div>
			<div class="col-sm-9">
			<h1>Users</h1>
				<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>Imege</th>
						<th>Name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each  do |f| %>
					<tr>
						<td><%= attachment_image_tag f, :image, :fill, 60, 60, fallback: "no_image.jpg",:size => "60x60" %></td>
						<td><%= f.name %></td>
						<td><%= link_to 'Show', user_path(f.id) %></td>
					</tr>
					<% end %>
				</tbody>
				</table>
			</div>
		</div>
	</div>
</body>