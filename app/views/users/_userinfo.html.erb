<h1>User info</h1>
<%= attachment_image_tag user, :image, resize_to_fit: [100, 100],class: "pull-left profile-thumb", fallback: "no_image.jpg",:size =>"100x100" %>
<table class="table ">
	<tbody>
	<tr>
		<th> name</th>
		<td><%= user.name %></td>
	</tr>
	<tr>
		<th> introduction</th>
		<td><%= user.introduction %></td>
	</tr>
	<tbody>
</table>
	<% if user == current_user%>
	<%= link_to '',edit_user_path(current_user.id), class: 'col-sm-12 btn btn-default glyphicon glyphicon-wrench' %>
	<% else %>
	<%= link_to '',users_path, class: 'col-sm-12 btn btn-default glyphicon glyphicon-wrench' %>
	<% end %>